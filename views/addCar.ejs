    <% /*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-ADD CONTENT HERE-@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ */ %>
    <div class="content">
        <div id="addCar">
            <div class= "addCarContent">
                <h3>Create a Vehicle</h3>
                <h4><%=msg%></h4>
                <form action="/cars/<%=driverId%>" method = "POST">
                    <input type="text" name="make" placeholder="Input Make" required="required"/> </br> </br>
                    <input type="text" name="model" placeholder="Input Model" required="required"/> </br> </br>
                    <input type="text" name="year" placeholder="Input Year" required="required"/> </br> </br>
                    <input type="text" name="imageURL" placeholder="Image URL" required="required"/> </br> </br>
                    <input type="text" name="bodyStyle" placeholder="Body Style"/>  </br> </br>
                    <input type="submit" value="Create Vehicle" />
                </form>
            </div>    
        </div>
    </div>
    <% /*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-ADD CONTENT HERE-@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ */ %>

