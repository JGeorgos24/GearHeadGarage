<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <title>GHG - Personal Garage</title>
    <link rel="stylesheet" href="/css/showRoom.css" />
</head>

<body>
    <header>

        <div id="top-box">
            <div id="top-text">
                <h1>Personal Garage</h1>
            </div>
        </div>

        <div class="nav-wrapper">
            <div id="left-nav">
                <a href="/cars/aboutUs">About Us</a>
                <a href="/cars/showroom" class="add-pipe">Show Room</a>
                <a href="/cars/addCar/?driverId=<%=driver.id%>" class="add-pipe">Add a Car</a>
            </div>
            <div id="right-nav">
                <a href="/drivers/profile"> Back to Driver's Profile</a>
            </div>
        </div>
        <div class="red-line"></div>
    </header>

    <% /*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-ADD CONTENT HERE-@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ */ %>
    <div class="content">
        <div id="showRoom">
            <div class= "showRoomCars">
                    <% for(let i = 0; i <driver.Cars.length; i++) {%>
                            <div class='car-list'>
                            <% console.log(driver.Cars[i].id) %>
                             <img class="thumbnail" src="<%=driver.Cars[i].imageURL%>" alt="picture of car" srcset=""/>
                             <div class="overlay">
                                <div
                                class="text"><%=driver.Cars[i].year%><br/><%=driver.Cars[i].make%><br/><%=driver.Cars[i].model%><br/></div>
                                <form id="sell-car" action="/cars/<%=driver.Cars[i].id%>?_method=DELETE" method="POST">
                                    <input type="submit" value="Sell Car" />
                                </form>
                              </div>
                        </div>
                    <% } %>
            </div>    
        </div>
    </div>
        <% /*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-ADD CONTENT HERE-@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ */ %>

        <footer class="footer">
            <div class="nav-wrapper-footer">
                <div id="center-nav">
                    <a href="https://twitter.com/head_garage" target="_blank">Twitter</a>
                    <a href="https://www.facebook.com/profile.php?id=100055866800268" class="add-pipe"
                        target="_blank">Facebook</a>
                    <a href="https://www.instagram.com/gearheadgarage__/" class="add-pipe" target="_blank">Instagram</a>
                    <a href="/cars" class="add-pipe"> GHG Homepage </a>
                </div>
            </div>
        </footer>
</body>

</html>